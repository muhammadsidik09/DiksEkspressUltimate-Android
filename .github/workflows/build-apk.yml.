name: Build Android APK

# Trigger: saat push ke main atau ketika tag release dibuat
on:
  push:
    branches: ["main"]
    tags: ["v*.*.*"]  # fenomena semantik versioning seperti v1.0.0
  pull_request:
    branches: ["main"]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Checkout source code
      - name: Checkout repository
        uses: actions/checkout@v4

      # Set up Java
      - name: Set up JDK
        uses: actions/setup-java@v3
        with:
          distribution: temurin
          java-version: '17'

      # Set up Android SDK
      - name: Set up Android SDK
        uses: android-actions/setup-android@v3
        with:
          api-level: 33
          build-tools: '33.0.2'
          cache: gradle

      # Grant execution permission for Gradle wrapper
      - name: Grant execute permission for gradlew
        run: chmod +x gradlew

      # Build APK
      - name: Build release APK
        run: ./gradlew assembleRelease

      # Upload artifact APK untuk download sebagai artifact
      - name: Upload APK artifact
        uses: actions/upload-artifact@v3
        with:
          name: app-release-apk
          path: app/build/outputs/apk/release/*.apk

  release:
    needs: build
    runs-on: ubuntu-latest
    if: startsWith(github.ref, 'refs/tags/')

    steps:
      # Download APK dari job build
      - name: Download build artifacts
        uses: actions/download-artifact@v3
        with:
          name: app-release-apk

      # Buat Release di GitHub
      - name: Create GitHub Release
        id: create_release
        uses: ncipollo/release-action@v1
        with:
          artifacts: app-release-apk/*.apk
          token: ${{ secrets.GITHUB_TOKEN }}
          name: Release ${{ github.ref }}
          body: "Automated APK build for tag ${{ github.ref }}"
